    $('#coupon_submit').click(function (e) {
        $(".spinner").show();
        var planId={{planid}};
        mon=$("#months").val();
        e.preventDefault();
        var coupon = $('#coupon_code').val();
        $.ajax({
            type: "POST",
            url: "/couponValidate",
            data: {'coupon': coupon, 'planid': planId, 'months': mon},
            success: function (data_new) {
                $(".spinner").hide();
                data_new = JSON.parse(data_new);
                console.log(data_new);
                if (data_new['success'] == true) {

                    var net_amnt = $('#total_fee').text();

                    net_amnt = net_amnt.replace('₹','').trim();
                    console.log(net_amnt);
                    var discount=data_new['result']['discount'];
                    var final_amnt = parseInt(net_amnt)-parseInt(discount);
                    $('#total_fee').text('₹ '+final_amnt);
                    $("#coupon_submit").hide();
                    $("#coupon_code").attr("disabled","disabled");
                    toastr.success('Coupon Accepted. Coupon discount amount is '+discount);
                }
                else {
                    toastr.error(data_new['errors']);
                }
            },

        });
    });

