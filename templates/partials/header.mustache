        });

        $.ajax({
            type: "GET",
            url: "/loginValidate",
            success: function (data) {
                if (data != 'failure') {
                    data = JSON.parse(data);
                    console.log(data)
                    $("#firstname").text(" Welcome " + data['name']);
                    $("nav").show()
