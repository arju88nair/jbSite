        function searchClick() {

            var term = $("#srch-term").val();
            if (term !== "") {
                window.location.href = "/search?q=" + term + "";

            }

        }
        $(document).ready(function () {
            $('#srch-term').keypress(function (e) {
                var key = e.which;
